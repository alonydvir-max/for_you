<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Turtle Game Online</title>
  <script src="https://cdn.jsdelivr.net/npm/p5@1.6.0/lib/p5.min.js"></script>
  <style>
    body {
      margin: 0; 
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      background: #f0f0f0;
    }
    canvas {
      border: 2px solid #333;
    }
  </style>
</head>
<body>
  <script>
    let player;
    let redCircle;
    let blueCircle;
    let score = 0;

    function setup() {
      createCanvas(600, 600);
      player = createVector(random(width), random(height));
      redCircle = createVector(random(width), random(height));
      blueCircle = createVector(random(width), random(height));
      textAlign(CENTER, CENTER);
      textSize(24);
    }

    function draw() {
      background(255);

      fill(0);
      text("Score: " + score, width / 2, 30);

      fill(0, 200, 0);
      ellipse(player.x, player.y, 30);

      fill(255, 0, 0);
      ellipse(redCircle.x, redCircle.y, 40);

      fill(0, 0, 255);
      ellipse(blueCircle.x, blueCircle.y, 40);

      let dir = p5.Vector.sub(player, redCircle);
      let speed = min(4, 1.5 + score * 0.15);
      dir.setMag(speed);
      redCircle.add(dir);

      if (dist(player.x, player.y, redCircle.x, redCircle.y) < 35) {
        player = createVector(random(width), random(height));
        score--;
      }

      if (dist(player.x, player.y, blueCircle.x, blueCircle.y) < 35) {
        player = createVector(random(width), random(height));
        score++;
        blueCircle = createVector(random(width), random(height));
      }

      player.x = constrain(player.x, 0, width);
      player.y = constrain(player.y, 0, height);
    }

    function keyPressed() {
      if (keyCode === UP_ARROW) player.y -= 20;
      else if (keyCode === DOWN_ARROW) player.y += 20;
      else if (keyCode === LEFT_ARROW) player.x -= 20;
      else if (keyCode === RIGHT_ARROW) player.x += 20;
    }
  </script>
</body>
</html>
